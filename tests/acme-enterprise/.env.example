# ACME Enterprise - Typosentinel Environment Configuration Example
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
APP_NAME=acme-typosentinel
APP_VERSION=1.0.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
HASH_ROUNDS=12

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=typosentinel
DB_USER=typosentinel_user
DB_PASSWORD=your-database-password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TTL=3600

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password
ELASTICSEARCH_INDEX=typosentinel-logs

# =============================================================================
# TYPOSENTINEL API CONFIGURATION
# =============================================================================
TYPOSENTINEL_API_URL=http://localhost:8080
TYPOSENTINEL_API_KEY=your-typosentinel-api-key
TYPOSENTINEL_API_TIMEOUT=30000
TYPOSENTINEL_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Jaeger Tracing
JAEGER_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SERVICE_NAME=acme-security-dashboard

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Slack
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#security-alerts
SLACK_USERNAME=Typosentinel

# Email
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=security@acme-enterprise.com
EMAIL_TO=security-team@acme-enterprise.com

# PagerDuty
PAGERDUTY_ENABLED=false
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# Microsoft Teams
TEAMS_ENABLED=false
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# =============================================================================
# REGISTRY MONITORING
# =============================================================================
# NPM Registry
NPM_REGISTRY_URL=https://registry.npmjs.org
NPM_REGISTRY_TOKEN=your-npm-token

# PyPI Registry
PYPI_REGISTRY_URL=https://pypi.org
PYPI_REGISTRY_TOKEN=your-pypi-token

# Maven Central
MAVEN_REGISTRY_URL=https://repo1.maven.org/maven2
MAVEN_REGISTRY_USERNAME=your-maven-username
MAVEN_REGISTRY_PASSWORD=your-maven-password

# NuGet Registry
NUGET_REGISTRY_URL=https://api.nuget.org/v3/index.json
NUGET_REGISTRY_API_KEY=your-nuget-api-key

# RubyGems Registry
RUBYGEMS_REGISTRY_URL=https://rubygems.org
RUBYGEMS_REGISTRY_API_KEY=your-rubygems-api-key

# Go Modules
GO_PROXY=https://proxy.golang.org
GO_SUMDB=sum.golang.org

# =============================================================================
# SECURITY SCANNING CONFIGURATION
# =============================================================================
SCAN_INTERVAL=3600
SCAN_TIMEOUT=300
SCAN_CONCURRENT_LIMIT=5
VULNERABILITY_THRESHOLD=medium
ZERO_DAY_DETECTION_ENABLED=true
MALICIOUS_PACKAGE_DETECTION_ENABLED=true
TYPOSQUATTING_DETECTION_ENABLED=true
DEPENDENCY_CONFUSION_DETECTION_ENABLED=true

# =============================================================================
# COMPLIANCE SETTINGS
# =============================================================================
COMPLIANCE_ENABLED=true
COMPLIANCE_FRAMEWORKS=nist,iso27001,cis
COMPLIANCE_REPORT_INTERVAL=86400
COMPLIANCE_RETENTION_DAYS=365

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Request Timeouts
REQUEST_TIMEOUT=30000
API_TIMEOUT=15000
DB_TIMEOUT=10000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_REAL_TIME_SCANNING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_CUSTOM_RULES=true
FEATURE_INTEGRATION_WEBHOOKS=true
FEATURE_BULK_OPERATIONS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG_ENABLED=false
DEBUG_NAMESPACE=typosentinel:*
HOT_RELOAD_ENABLED=false
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs

# =============================================================================
# CLOUD PROVIDER SETTINGS (Optional)
# =============================================================================
# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=acme-typosentinel-reports

# Azure
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Google Cloud
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json
GCP_STORAGE_BUCKET=acme-typosentinel-reports

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_TYPE=local
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# ADDITIONAL INTEGRATIONS
# =============================================================================
# Jira
JIRA_ENABLED=false
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=SEC

# ServiceNow
SERVICENOW_ENABLED=false
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=your-servicenow-username
SERVICENOW_PASSWORD=your-servicenow-password

# Splunk
SPLUNK_ENABLED=false
SPLUNK_HOST=your-splunk-host
SPLUNK_PORT=8088
SPLUNK_TOKEN=your-splunk-hec-token
SPLUNK_INDEX=typosentinel