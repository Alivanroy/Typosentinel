# ACME Security Dashboard Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=4000
APP_NAME="ACME Security Dashboard"
APP_VERSION=1.0.0
APP_URL=http://localhost:4000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Session Secret (generate a strong random string)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Encryption Key for sensitive data (32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS Origin (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:4000

# =============================================================================
# DATABASE CONNECTIONS
# =============================================================================
# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=typosentinel
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_SSL=false
POSTGRES_MAX_CONNECTIONS=20

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TTL=3600

# =============================================================================
# ELASTICSEARCH SETTINGS
# =============================================================================
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password
ELASTICSEARCH_INDEX_PREFIX=typosentinel

# =============================================================================
# TYPOSENTINEL API SETTINGS
# =============================================================================
TYPOSENTINEL_API_URL=http://localhost:8080
TYPOSENTINEL_API_KEY=your-typosentinel-api-key
TYPOSENTINEL_WEBHOOK_SECRET=your-webhook-secret
TYPOSENTINEL_TIMEOUT=30000

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================
# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Jaeger Tracing
JAEGER_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SERVICE_NAME=acme-security-dashboard

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_RETENTION_DAYS=30

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#security-alerts
SLACK_USERNAME=Typosentinel Bot
SLACK_ICON_EMOJI=:shield:

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@acme.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=security@acme.com
EMAIL_TO=security-team@acme.com

# PagerDuty Integration
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key
PAGERDUTY_SERVICE_ID=your-service-id

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# =============================================================================
# REGISTRY MONITORING
# =============================================================================
# NPM Registry
NPM_REGISTRY_URL=https://registry.npmjs.org
NPM_REGISTRY_TOKEN=your-npm-token

# PyPI Registry
PYPI_REGISTRY_URL=https://pypi.org
PYPI_REGISTRY_TOKEN=your-pypi-token

# Maven Central
MAVEN_REGISTRY_URL=https://repo1.maven.org/maven2
MAVEN_REGISTRY_USER=your-maven-user
MAVEN_REGISTRY_PASSWORD=your-maven-password

# NuGet Registry
NUGET_REGISTRY_URL=https://api.nuget.org/v3/index.json
NUGET_REGISTRY_TOKEN=your-nuget-token

# RubyGems Registry
RUBYGEMS_REGISTRY_URL=https://rubygems.org
RUBYGEMS_REGISTRY_TOKEN=your-rubygems-token

# Go Modules
GO_PROXY_URL=https://proxy.golang.org
GO_SUM_DB_URL=https://sum.golang.org

# =============================================================================
# SECURITY SCANNING SETTINGS
# =============================================================================
# Scan Configuration
SCAN_INTERVAL_MINUTES=60
SCAN_TIMEOUT_SECONDS=300
SCAN_CONCURRENT_LIMIT=5
SCAN_RETRY_ATTEMPTS=3

# Vulnerability Thresholds
VULN_CRITICAL_THRESHOLD=1
VULN_HIGH_THRESHOLD=5
VULN_MEDIUM_THRESHOLD=10
VULN_LOW_THRESHOLD=20

# Zero-Day Detection
ZERODAY_ENABLED=true
ZERODAY_CONFIDENCE_THRESHOLD=0.7
ZERODAY_ML_MODEL_PATH=./models/zeroday-detection.pkl

# =============================================================================
# COMPLIANCE SETTINGS
# =============================================================================
# Compliance Policies
COMPLIANCE_ENABLED=true
COMPLIANCE_FRAMEWORKS=SOC2,ISO27001,NIST,PCI-DSS
COMPLIANCE_CHECK_INTERVAL=240

# License Compliance
LICENSE_WHITELIST=MIT,Apache-2.0,BSD-3-Clause,ISC
LICENSE_BLACKLIST=GPL-3.0,AGPL-3.0,SSPL-1.0

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Caching
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000
CACHE_CHECK_PERIOD=600

# Request Timeouts
REQUEST_TIMEOUT_MS=30000
API_TIMEOUT_MS=10000
DB_TIMEOUT_MS=5000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Dashboard Features
FEATURE_REAL_TIME_ALERTS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_EXPORT_REPORTS=true
FEATURE_API_ACCESS=true
FEATURE_WEBHOOK_INTEGRATION=true

# Security Features
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_SSO_INTEGRATION=false
FEATURE_AUDIT_LOGGING=true
FEATURE_DATA_ENCRYPTION=true

# Experimental Features
FEATURE_AI_THREAT_DETECTION=false
FEATURE_PREDICTIVE_ANALYTICS=false
FEATURE_AUTOMATED_REMEDIATION=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development Tools
DEV_ENABLE_CORS=true
DEV_ENABLE_MOCK_DATA=false
DEV_ENABLE_DEBUG_LOGS=true
DEV_ENABLE_HOT_RELOAD=true

# Testing
TEST_DATABASE_URL=postgresql://postgres:test@localhost:5432/typosentinel_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_TIMEOUT_MS=10000

# =============================================================================
# CLOUD PROVIDER SETTINGS (Optional)
# =============================================================================
# AWS Settings
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=acme-security-reports
AWS_CLOUDWATCH_LOG_GROUP=/aws/lambda/security-dashboard

# Azure Settings
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=acme-security-rg
AZURE_STORAGE_ACCOUNT=acmesecuritystorage
AZURE_APPLICATION_INSIGHTS_KEY=your-app-insights-key

# Google Cloud Settings
GCP_PROJECT_ID=acme-security-project
GCP_SERVICE_ACCOUNT_KEY_PATH=./gcp-service-account.json
GCP_STORAGE_BUCKET=acme-security-reports
GCP_MONITORING_PROJECT_ID=acme-monitoring

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================
# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=acme-security-backups

# Data Retention
DATA_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30
METRICS_RETENTION_DAYS=365

# =============================================================================
# ADDITIONAL INTEGRATIONS
# =============================================================================
# JIRA Integration
JIRA_ENABLED=false
JIRA_URL=https://acme.atlassian.net
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=SEC

# ServiceNow Integration
SERVICENOW_ENABLED=false
SERVICENOW_INSTANCE=acme.service-now.com
SERVICENOW_USERNAME=your-servicenow-username
SERVICENOW_PASSWORD=your-servicenow-password

# Splunk Integration
SPLUNK_ENABLED=false
SPLUNK_HOST=splunk.acme.com
SPLUNK_PORT=8089
SPLUNK_TOKEN=your-splunk-token
SPLUNK_INDEX=security